<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:layout_margin="25dp">

    <ImageButton
        android:layout_width="220dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/profile_image"
        android:scaleType="centerCrop"
        android:background="#fff"
        android:id="@+id/profile_image"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Aquiles Casas Castro"
        android:layout_below="@+id/profile_image"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="25dp"
        android:id="@+id/name"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="aquiles@gmail.com"
        android:layout_below="@+id/name"
        android:textStyle="italic"
        android:gravity="center"
        android:textSize="15dp"
        android:id="@+id/mail"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="300-3213-1234"
        android:layout_below="@+id/mail"
        android:textStyle="italic"
        android:gravity="center"
        android:textSize="15dp"
        android:id="@+id/phone"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text="Medios de pago"
        android:layout_below="@+id/phone"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:id="@+id/payment"/>
    <EditText
        android:id="@+id/cc1"
        android:text="Mastercard ****1234"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/payment"
        android:focusable="false"
        android:layout_marginTop="10dp"/>
    <EditText
        android:id="@+id/cc2"
        android:text="VISA ****1234"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cc1"
        android:focusable="false"/>
    <EditText
        android:id="@+id/cash"
        android:text="Efectivo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cc2"
        android:focusable="false"/>
    <EditText
        android:id="@+id/add"
        android:text="+"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cash"
        android:focusable="false"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/add"
        android:text="Mis Servicios"
        android:background="@color/greenButtons"/>
</RelativeLayout>